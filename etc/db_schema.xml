<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="sadad_order_info" resource="default" engine="innodb" comment="Sadad Order Information" charset="utf8">
        <column name="id"                       xsi:type="bigint"     identity="true" unsigned="true"                   nullable="false"    comment=""/>
        <column name="magento_order_id"                 xsi:type="varchar"    length="32"                                       nullable="false"    comment="Magento Order Id"/>
        <column name="sadad_invoice_id"               xsi:type="varchar"    length="32"                                       nullable="true"     comment="Sadad Invoice Id"/>
        <column name="sadad_invoice_url"              xsi:type="varchar"    length="255"                                      nullable="true"     comment="Sadad Invoice URL"/>
        <column name="sadad_reference_id"             xsi:type="varchar"    length="32"                                       nullable="true"     comment="Sadad Reference ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
